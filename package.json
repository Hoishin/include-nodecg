{
	"name": "include-nodecg",
	"files": [
		"lib"
	],
	"version": "0.0.1-7",
	"description": "Tools to include NodeCG in your bundle, rather than including your bundle in NodeCG",
	"license": "MIT",
	"main": "lib/index.js",
	"bin": "lib/bin/index.js",
	"husky": {
		"pre-commit": "lint-staged"
	},
	"scripts": {
		"build": "del-cli lib && tsc",
		"test": "ts-node src/bin postinstall",
		"release": "npm test && npm run build && standard-version"
	},
	"lint-staged": {
		"concurrent": false,
		"linters": {
			"*.{ts,json,yml,md}": [
				"prettier --write",
				"git add"
			],
			"*.ts": [
				"eslint --fix",
				"git add"
			],
			"package.json": [
				"sort-package-json",
				"git add"
			]
		}
	},
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"app-root-path": "^2.2.1",
		"bower": "^1.8.8",
		"cpy": "^7.3.0",
		"del": "^5.0.0",
		"execa": "^3.0.0",
		"is-docker": "^2.0.0",
		"is-root": "^2.1.0",
		"load-json-file": "^6.2.0",
		"tslib": "^1.9.3",
		"yargs": "^14.0.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/app-root-path": "^1.2.4",
		"@types/node": "^10.14.22",
		"@types/yargs": "^13.0.3",
		"del-cli": "^3.0.0",
		"eslint": "^6.5.1",
		"eslint-config-hoishin": "^0.2.1",
		"husky": "^3.0.9",
		"lint-staged": "^9.4.2",
		"nodecg": "1.5.0",
		"prettier": "^1.18.2",
		"sort-package-json": "^1.22.1",
		"standard-version": "^7.0.0",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.4"
	}
}
