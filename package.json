{
	"name": "include-nodecg",
	"files": [
		"lib"
	],
	"version": "0.0.3",
	"description": "Tools to include NodeCG in your bundle, rather than including your bundle in NodeCG",
	"license": "MIT",
	"main": "lib/index.js",
	"bin": "lib/bin/index.js",
	"husky": {
		"pre-commit": "lint-staged"
	},
	"scripts": {
		"build": "del-cli lib && tsc",
		"check-format": "prettier --check \"**/*.{ts,js,json,yml,md}\"",
		"lint": "eslint --ext .ts .",
		"test": "run-s check-format lint dry-run-postinstall",
		"dry-run-postinstall": "ts-node src/bin postinstall",
		"release": "run-s test build && standard-version"
	},
	"lint-staged": {
		"*.{json,yml,md}": [
			"prettier --write",
			"git add"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"app-root-path": "^3.0.0",
		"bower": "^1.8.8",
		"cpx": "^1.5.0",
		"del": "^6.0.0",
		"execa": "^4.0.0",
		"is-docker": "^2.0.0",
		"is-root": "^2.1.0",
		"load-json-file": "^6.2.0",
		"tslib": "^1.9.3",
		"yargs": "^15.0.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^2.0.0",
		"@types/app-root-path": "^1.2.4",
		"@types/cpx": "^1.5.0",
		"@types/node": "^10.14.22",
		"@types/yargs": "^15.0.0",
		"del-cli": "^3.0.0",
		"eslint": "^6.5.1",
		"eslint-config-hoishin": "^0.2.1",
		"husky": "^4.0.0",
		"lint-staged": "^10.0.0",
		"nodecg": "1.6.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"sort-package-json": "^1.22.1",
		"standard-version": "^7.0.0",
		"ts-node": "^8.4.1",
		"typescript": "^4.0.0"
	}
}
